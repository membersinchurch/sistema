      <!-- Lista de visitantes -->
<div class="bg-white shadow-md rounded-lg p-4 overflow-x-auto">
  <h2 class="text-lg font-semibold mb-4 text-center text-gray-700">Lista de Visitantes</h2>
  <table class="min-w-full text-sm table-auto mx-auto">
    <thead>
      <tr class="bg-gray-200 text-gray-700 text-left">
        <th class="px-4 py-2">Nome</th>
        <th class="px-4 py-2">WhatsApp</th>
        <th class="px-4 py-2">ObservaÃ§Ã£o</th>
        <th class="px-4 py-2">Data da Visita</th>
        <th class="px-4 py-2 text-center">AÃ§Ãµes</th>
      </tr>
    </thead>
    <tbody>
      <% if (visitantes.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center py-4 text-gray-500">Nenhum visitante cadastrado.</td>
        </tr>
      <% } else { %>
        <% visitantes.forEach(v => { %>
          <tr class="border-t border-gray-200 hover:bg-gray-50">
            <td class="px-4 py-2"><%= v.nome %></td>
            <td class="px-4 py-2">
              <a 
                href="https://wa.me/55<%= v.whatsapp.replace(/\D/g, '') %>" 
                target="_blank" 
                class="text-green-600 hover:underline">
                <%= v.whatsapp %>
              </a>
            </td>
            <td class="px-4 py-2"><%= v.observacao %></td>
            <td class="px-4 py-2"><%= v.data_visita ? v.data_visita.toLocaleDateString() : '' %></td>
            <td class="px-4 py-2 text-center">
              <div class="flex gap-2 justify-center">
  <!-- BotÃ£o Editar -->
  <button 
    type="button"
    onclick='abrirModal(
      <%= v.id %>,
      <%- JSON.stringify(v.nome) %>,
      <%- JSON.stringify(v.whatsapp) %>,
      <%- JSON.stringify(v.observacao) %>,
      <%- JSON.stringify(v.data_visita ? v.data_visita.toISOString().split("T")[0] : "") %>
    )'
    class="text-blue-600 hover:text-blue-800 font-semibold">
    Editar
  </button>

  <!-- BotÃ£o Excluir -->
  <form action="/visitantes/excluir/<%= v.id %>" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este visitante?');">
    <button type="submit" class="text-red-600 hover:text-red-800 font-semibold">Excluir</button>
  </form>
</div>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

    </div>
  </main>

  <!-- Modal de EdiÃ§Ã£o -->
  <div id="modalEdicao" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-6 relative">
      <h2 class="text-lg font-bold mb-4">Editar Visitante</h2>
      <form id="formEdicao" method="POST">
        <input type="hidden" id="editId" name="id">

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">Nome</label>
          <input type="text" id="editNome" name="nome" class="w-full p-2 border rounded">
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">WhatsApp</label>
          <input type="text" id="editWhatsapp" name="whatsapp" class="w-full p-2 border rounded">
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">ObservaÃ§Ã£o</label>
          <textarea id="editObservacao" name="observacao" rows="3" class="w-full p-2 border rounded"></textarea>
        </div>

        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700">Data da Visita</label>
          <input type="date" id="editDataVisita" name="data_visita" class="w-full p-2 border rounded">
        </div>

        <div class="flex justify-end gap-2">
          <button type="button" onclick="fecharModal()" class="px-4 py-2 bg-gray-400 text-white rounded">Cancelar</button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">Salvar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const toggleButton = document.getElementById("menuBtn");
      const sidebar = document.getElementById("sidebar");

      if (toggleButton && sidebar) {
        toggleButton.addEventListener("click", () => {
          sidebar.classList.toggle("-translate-x-full");
        });
      }
    });

    // Abrir modal e preencher dados
    function abrirModal(id, nome, whatsapp, observacao, dataVisita) {
      document.getElementById("modalEdicao").classList.remove("hidden");
      document.getElementById("modalEdicao").classList.add("flex");

      document.getElementById("editId").value = id;
      document.getElementById("editNome").value = nome;
      document.getElementById("editWhatsapp").value = whatsapp;
      document.getElementById("editObservacao").value = observacao || "";
      document.getElementById("editDataVisita").value = dataVisita || "";

      document.getElementById("formEdicao").action = "/visitantes/editar/" + id;
    }

    // Fechar modal
    function fecharModal() {
      document.getElementById("modalEdicao").classList.add("hidden");
      document.getElementById("modalEdicao").classList.remove("flex");
    }
  </script>

