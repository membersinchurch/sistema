<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login - Members In Church</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/@heroicons/vue@2.0.13/24/solid/index.min.js"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          animation: {
            fadeIn: "fadeIn 0.5s ease-out"
          },
          keyframes: {
            fadeIn: {
              from: { opacity: 0, transform: "translateY(10px)" },
              to: { opacity: 1, transform: "translateY(0)" }
            }
          }
        }
      }
    };
  </script>
</head>
<body class="bg-gradient-to-br from-blue-100 to-white min-h-screen flex items-center justify-center">

  <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-sm animate-fadeIn">
   <!-- Logo -->
    <div class="flex justify-center mb-6">
      <img src="/img/logo.jpg" alt="Logo do sistema" class="h-[200px] w-[200px] animate-fadeIn" />
    </div>

    <div class="flex justify-center gap-4 mb-6">
      <a href="/" class="bg-blue-600 text-white font-bold px-4 py-2 rounded">Login Admin</a>
      <a href="/login_usuario" class="bg-blue-600 text-white font-bold px-4 py-2 rounded">Login Usuário</a>
    </div>

    <!-- Título -->
    <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Login do Usuário</h2>

    <!-- Formulário -->
    <form method="POST" action="/login_usuario" class="space-y-4">
      <div class="relative">
        <input 
          type="email" 
          name="email" 
          placeholder="email"
          required
          class="w-full px-10 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-2.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A11.953 11.953 0 0112 15c2.761 0 5.305.936 7.121 2.804M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <div class="relative">
        <input 
          type="password" 
          name="senha" 
          placeholder="senha"
          required
          class="w-full px-10 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-2.5 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m0-6a4 4 0 100 8 4 4 0 000-8zm0 0V9m0 0a3 3 0 00-6 0v3m6-3a3 3 0 016 0v3" />
        </svg>
      </div>
      <button 
        type="submit" 
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200"
      >
        Entrar
      </button>

      <div class="text-center mt-4">
        <a href="/esqueci-senha" class="text-blue-600 hover:underline">Esqueci minha senha</a>
      </div>

    </form>
    </form>

    <!-- Erro -->
    <% if (typeof error !== 'undefined' && error) { %>
  <p class="mt-4 text-red-500 text-sm text-center"><%= error %></p>
<% } %>

  </div>

</body>
</html>


