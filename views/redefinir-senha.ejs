<!-- views/redefinir-senha.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Redefinir Senha</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-100 to-white min-h-screen flex items-center justify-center">

  <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-sm animate-fadeIn">
    <div class="flex justify-center mb-6">
      <img src="https://img.icons8.com/ios-filled/100/4a90e2/key.png" alt="Redefinir Senha" class="h-16" />
    </div>

    <h2 class="text-xl font-bold text-center text-gray-700 mb-4">Redefinir Senha</h2>
    <p class="text-center text-gray-500 text-sm mb-6">
      Digite sua nova senha abaixo.
    </p>

    <form method="POST" action="/redefinir-senha/<%= token %>" class="space-y-4">
      <input 
        type="password" 
        name="novaSenha" 
        placeholder="Nova senha"
        required
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button 
        type="submit" 
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200"
      >
        Atualizar Senha
      </button>
    </form>

    <% if (mensagem) { %>
      <p class="mt-4 text-green-600 text-sm text-center"><%= mensagem %></p>
    <% } %>

    <div class="mt-4 text-center">
      <a href="/" class="text-sm text-blue-600 hover:underline">Voltar para login</a>
    </div>
  </div>

</body>
</html>
