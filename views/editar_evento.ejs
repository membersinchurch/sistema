<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Editar Evento</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-8">
  <div class="max-w-lg mx-auto bg-white p-6 rounded-xl shadow-md">
    <h2 class="text-2xl font-bold mb-4">Editar Evento</h2>

    <!-- Formulário de Edição -->
    <form method="POST" action="/eventos/editar/<%= evento.id %>">
  <input type="text" name="titulo" placeholder="Título" value="<%= evento.titulo %>" class="w-full p-2 border mb-4 rounded" required>
  <textarea name="descricao" placeholder="Descrição" class="w-full p-2 border mb-4 rounded" required><%= evento.descricao %></textarea>
  <input type="text" name="local" placeholder="Local" value="<%= evento.local %>" class="w-full p-2 border mb-4 rounded" required>
<input type="date" name="data_inicio" value="<%= new Date(evento.data_inicio).toISOString().substring(0, 10) %>" class="w-full p-2 border mb-4 rounded" required>
<input type="date" name="data_fim" value="<%= evento.data_fim ? new Date(evento.data_fim).toISOString().substring(0, 10) : '' %>" class="w-full p-2 border mb-4 rounded">

  <!-- ✅ Botão de Salvar -->
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full">
    Salvar Alterações
  </button>
</form>

<!-- ✅ Formulário de exclusão separado -->
<form method="POST" action="/eventos/excluir/<%= evento.id %>" onsubmit="return confirm('Tem certeza que deseja excluir este evento?');">
  <button type="submit" class="bg-red-600 text-white px-4 py-2 mt-4 rounded hover:bg-red-700 w-full">
    Excluir Evento
  </button>
</form>


  </div>
</body>
</html>
