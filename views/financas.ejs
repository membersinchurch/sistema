      <a href="/grupos" class="block hover:text-blue-600">Grupos Caseiros</a>
      <a href="/aniversariantes" class="block hover:text-blue-600">Aniversariantes</a>
      <a href="/agenda" class="block hover:text-blue-600">Agenda</a>
      <a href="/avisos" class="block hover:text-blue-600">Avisos</a>
      <a href="/cadastro" class="block hover:text-blue-600">Cadastrar Usuários</a>
      <a href="/exportar/csv" class="block hover:text-blue-600">Exportar CSV</a>
      <a href="/financas/exportar/pdf" class="block hover:text-blue-600">Exportar PDF</a>      
      <a href="/logout" class="block text-red-500 hover:text-red-700">Sair</a>
