<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Avisos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f9f9f9;
    }

    .container {
      max-width: 600px;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      color: #333;
    }

    .btn-voltar {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  margin-bottom: 15px;
  padding: 8px 12px;
  background-color: #3498db;
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-size: 14px;
  transition: background-color 0.3s;
}

.btn-voltar:hover {
  background-color: #2980b9;
}

    

    form {
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;
    }

    input[type="text"] {
      padding: 12px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 6px;
      width: 100%;
      box-sizing: border-box;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .aviso {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: #f1f1f1;
      padding: 10px;
      margin-bottom: 10px;
      border-radius: 6px;
    }

    .aviso span {
      flex-grow: 1;
      margin-left: 10px;
      font-size: 16px;
      color: #333;
    }

    .aviso-concluido span {
      text-decoration: line-through;
      color: #888;
    }

    .delete-btn {
      background: none;
      border: none;
      color: red;
      font-size: 18px;
      cursor: pointer;
    }

    @media (max-width: 480px) {
      .container {
        padding: 15px;
      }

      .aviso {
        flex-direction: column;
        align-items: flex-start;
      }

      .delete-btn {
        align-self: flex-end;
        margin-top: 5px;
      }

      .btn-voltar {
        font-size: 13px;
        padding: 8px 12px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/dashboard" class="btn-voltar">‚Üê Voltar</a>

    <h2>Avisos</h2>

    <form action="/avisos" method="POST">
      <input type="text" name="texto" id="texto" placeholder="Digite um aviso e pressione Enter" required>
    </form>

    <ul id="lista-avisos">
      <% avisos.forEach(aviso => { %>
        <li class="aviso <%= aviso.concluido ? 'aviso-concluido' : '' %>">
          <form method="POST" action="/avisos/<%= aviso.id %>/toggle" style="display:inline;">
            <input type="checkbox" name="concluido" <%= aviso.concluido ? 'checked' : '' %> onchange="this.form.submit()">
          </form>
          <span><%= aviso.texto %></span>
          <form action="/avisos/<%= aviso.id %>/delete" method="POST" style="display:inline;">
            <button class="delete-btn" type="submit" title="Excluir">üóë</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
