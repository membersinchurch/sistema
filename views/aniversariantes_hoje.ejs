<!DOCTYPE html>
<html lang="pt-br" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aniversariantes de Hoje</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-100 min-h-screen">

  <!-- Cabeçalho -->
  <header class="bg-green-600 text-white px-6 py-4 flex justify-between items-center shadow-md">
    <h1 class="text-xl font-semibold">🎂 Aniversariantes de Hoje</h1>
    <a href="/dashboard" class="bg-white text-green-600 px-4 py-2 rounded hover:bg-gray-100">Voltar</a>
  </header>

  <!-- Conteúdo -->
  <main class="p-6 max-w-4xl mx-auto">
    <% if (aniversariantesHoje.length === 0) { %>
      <div class="bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 p-4 rounded text-center shadow">
        <p>🎉 Nenhum aniversariante hoje.</p>
      </div>
    <% } else { %>
      <ul class="space-y-4">
        <% aniversariantesHoje.forEach(m => { %>
          <li class="bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md flex justify-between items-center">
            <div>
              <p class="text-lg font-semibold"><%= m.nome %></p>
              <p class="text-sm text-gray-500 dark:text-gray-400">🎈 <%= new Date(m.data_nascimento).toLocaleDateString("pt-BR") %></p>
              <p class="text-sm">📧 <%= m.email %></p>
            </div>
            <form action="/enviar-parabens" method="POST">
              <input type="hidden" name="nome" value="<%= m.nome %>" />
              <input type="hidden" name="email" value="<%= m.email %>" />
              <button type="submit"
                      class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
                Enviar Parabéns
              </button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
