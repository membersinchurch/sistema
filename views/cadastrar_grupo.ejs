<!-- cadastrar-grupo.html -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cadastrar Grupo Caseiro</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen p-6">
  <div class="max-w-xl mx-auto bg-white p-8 rounded-xl shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-blue-700">Cadastrar Grupo Caseiro</h1>
    <form action="/grupos/salvar" method="POST" class="space-y-4">
      <div>
        <label class="block font-medium">Nome do Grupo</label>
        <input name="nome" required class="w-full border rounded p-2" />
      </div>
      <div>
        <label class="block font-medium">Líderes</label>
        <input name="lideres" required class="w-full border rounded p-2" />
      </div>
      <div>
        <label class="block font-medium">Anfitriões</label>
        <input name="anfitrioes" required class="w-full border rounded p-2" />
      </div>
      <div>
        <label class="block font-medium">Dia da Reunião</label>
        <input name="dia" required class="w-full border rounded p-2" />
      </div>
      <div>
        <label class="block font-medium">Horário</label>
        <input name="horario" type="time" required class="w-full border rounded p-2" />
      </div>
      <div>
        <label class="block font-medium">Endereço</label>
        <input name="endereco" required class="w-full border rounded p-2" />
      </div>
      <div>
        <label class="block font-medium">Telefone</label>
        <input name="telefone" type="tel" required class="w-full border rounded p-2" />
      </div>
      <div class="text-right">
        <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">Salvar</button>
      </div>
    </form>
  </div>
</body>
</html>
