<%- include('partials/header') %>

<div class="flex min-h-screen">
  <%- include('partials/sidebar') %>

  <div class="flex-1 p-6 bg-gray-100">
    <h1 class="text-2xl font-bold mb-4">Usuários Cadastrados</h1>

    <div class="overflow-x-auto bg-white rounded shadow p-4">
      <table class="w-full text-left border-collapse">
        <thead>
          <tr>
            <th class="border-b p-2">ID</th>
            <th class="border-b p-2">Nome</th>
            <th class="border-b p-2">Email</th>
          </tr>
        </thead>
        <tbody>
          <% if (usuarios.length > 0) { %>
            <% usuarios.forEach(usuario => { %>
              <tr>
                <td class="border-b p-2"><%= usuario.id %></td>
                <td class="border-b p-2"><%= usuario.nome %></td>
                <td class="border-b p-2"><%= usuario.email %></td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center p-4">Nenhum usuário cadastrado.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
