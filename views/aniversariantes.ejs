<%- include('partials/header') %>



<div class="min-h-screen bg-gray-100 py-10 px-4">
  <div class="max-w-7xl mx-auto">

    
    
    <!-- Título e botão de voltar -->
    <div class="mb-10 flex justify-between items-center">
      <a href="/dashboard" class="text-sm text-blue-600 hover:underline inline-flex items-center gap-1">
  <!-- Ícone opcional -->
  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
  </svg>
  Voltar
</a>
    </div>

    

    <!-- Aniversariantes de Hoje -->
    <% if (aniversariantesHoje.length > 0) { %>
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">🎈 Aniversariantes de Hoje</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mb-10">
        <% aniversariantesHoje.forEach(membro => { %>
          <div class="bg-gradient-to-br from-yellow-100 via-pink-100 to-blue-100 rounded-xl shadow-lg p-6 transition-transform transform hover:scale-105 hover:shadow-xl">
  <div class="flex flex-col items-center">
    <img src="<%= membro.foto || '/img/default-profile.jpg' %>" alt="<%= membro.nome %>"
         class="w-24 h-24 rounded-full object-cover border-4 border-white shadow-md mb-4">
    <h3 class="text-xl font-bold text-gray-800 text-center"><%= membro.nome %></h3>
    <p class="text-sm text-gray-500">🎂 <%= new Date(membro.data_nascimento).toLocaleDateString('pt-BR') %></p>
    <a href="/enviar-parabens/<%= membro.id %>"
       class="bg-pink-500 hover:bg-pink-600 text-white font-semibold px-4 py-2 rounded-full flex items-center gap-2 transition duration-300">
      ✉️ Enviar Parabéns
    </a>
  </div>
</div>

        <% }); %>
      </div>
    <% } %>

    <!-- Aniversariantes do Mês -->
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">📅 Aniversariantes do Mês</h2>
    <% if (aniversariantesMes.length > 0) { %>
      <div class="space-y-4">
        <% aniversariantesMes.forEach(membro => { %>
          <div class="bg-white rounded-lg shadow flex items-center p-4 hover:shadow-md transition">
            <img src="<%= membro.foto || '/img/default-profile.jpg' %>" alt="<%= membro.nome %>"
                 class="w-14 h-14 rounded-full object-cover border-2 border-blue-400 mr-4">
            <div>
              <h3 class="text-base font-semibold text-gray-800"><%= membro.nome %></h3>
              <p class="text-sm text-gray-500">🎂 <%= new Date(membro.data_nascimento).toLocaleDateString('pt-BR') %></p>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center text-gray-500">Nenhum aniversariante este mês.</p>
    <% } %>

  </div>
</div>

<%- include('partials/footer') %>

